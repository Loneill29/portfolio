<div class="d-flex p-2">
<h1 class="contact d-flex justify-content-center">Contact Me</h1>
<div class="form d-flex justify-content-center">
<%= form_for @message, url: create_message_url do |f| %>
  <%= notice %>
  <%= @message.errors.full_messages.join(', ') %>
<div class="name">
  <%= f.text_field :name, :size=>"25", placeholder: 'name' %>
</div>
<div class="email">
  <%= f.email_field :email, :size=>"30", placeholder: 'email' %>
</div>
<div class="message">
  <%= f.text_area :body, cols: 60, rows: 15, placeholder: 'message' %>
</div>
  <%= f.submit 'Send', class: "btn" %>
<% end %>
</div>
</div>
